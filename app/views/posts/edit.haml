- @title = "Edit &raquo; " + @post.title

.content  
  .admin
    .menu
      %span.show= link_to 'Show', @post
      %span.delete= link_to 'Destroy', @post, :method => 'delete', :confirm => 'Are you sure?', :title => "Delete this post"    
      .clear
  .content-header
    - if @post.draft?
      %h2 Edit Draft
    - else
      %h2 Edit Post
  = render :partial => "/posts/postform", :locals => { :button_name => "Update Post"}